<?xml version="1.0"?>
<ruleset name="WordPress主题编码规范">
	<!-- 查看：https://github.com/squizlabs/PHP_CodeSniffer/wiki/Annotated-ruleset.xml -->
	<!-- 查看：https://github.com/WordPress-Coding-Standards/WordPress-Coding-Standards/blob/develop/WordPress-Core/ruleset.xml -->

	<!-- 设置规则描述 -->
	<description>这是一个自定义设置标准编码规则，用来检查WordPress的主题。</description>

	<!-- 包含WordPress规则，用排除的方式 -->
	<rule ref="WordPress">
		<exclude name="Generic.WhiteSpace.ScopeIndent.IncorrectExact" />
		<exclude name="Generic.WhiteSpace.ScopeIndent.Incorrect" />
		<exclude name="PEAR.Functions.FunctionCallSignature.Indent" />
	</rule>
</ruleset>
